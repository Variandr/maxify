{
  "name": "maxify",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.9.8",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "next": "12.3.0",
    "next-unused": "^0.0.6",
    "prettier": "^2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.35.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/node": "18.7.18",
    "@types/react": "18.0.20",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "^10.4.11",
    "eslint": "8.23.1",
    "eslint-config-next": "12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss": "^8.4.16",
    "prisma": "^4.3.1",
    "tailwindcss": "^3.1.8",
    "typescript": "4.8.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write",
      "git add"
    ],
    "**/*.{md,mdx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "next-unused": {
    "alias": {
      "@components/*": [
        "src/client/components/*"
      ],
      "@server/*": [
        "src/server/*"
      ]
    },
    "debug": true,
    "include": [
      "src/client/components",
      "src/client/lib",
      "src/pages"
    ],
    "exclude": [],
    "entrypoints": [
      "src/pages"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} src/test/seed/index.ts",
    "schema": "src/server/db/schema.prisma"
  }
}
